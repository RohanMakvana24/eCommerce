    <!-- Form Handle -->
    <script>
      $(document).ready(function () {
        //form validation
        $("#EmailSendForm").validate({
          rules: {
            email: {
              required: true,
              email: true,
            },
          },
        });

        //Submiting Form
        $("#EmailSendForm").on("submit", function (event) {
          event.preventDefault();
          if ($(this).valid()) {
            const formData = $(this).serialize();
            $("#sendBTN").prop("disabled", true);
            $.ajax({
              url: "/api/v1/auth/forgot-password",
              type: "POST",
              data: formData,
              success: function (response) {
                if (response.success) {
                  $("#sendBTN").prop("disabled", true);
                  $.toast({
                    heading: "Success",
                    text: response.message,
                    showHideTransition: "slide",
                    icon: "success",
                    position: "top-right",
                  });
                  window.location.href = `/api/v1/auth/verifyotp-page?data=${encodeURIComponent(
                    response.data
                  )}`;
                }
              },
              error: function (xhr, status, error) {
                $("#sendBTN").prop("disabled", false);
                if (xhr.responseJSON || xhr.responseJSON.message) {
                  $.toast({
                    heading: "Error",
                    text: xhr.responseJSON.message,
                    showHideTransition: "slide",
                    icon: "error",
                    position: "top-right",
                  });
                } else {
                  $.toast({
                    heading: "Error",
                    text: "Something Went Wrong",
                    showHideTransition: "slide",
                    icon: "error",
                    position: "top-right",
                  });
                }
              },
            });
          }
        });
      });
    </script>
